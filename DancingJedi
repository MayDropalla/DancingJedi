  <div class="credit">Click &amp; hold stage to pause animation • Created for you</div>

  <script>
    // small interactive: clicking the stage toggles pause/play
    const stage = document.querySelector('.stage');
    stage.addEventListener('click', () => {
      const jedi = document.querySelector('.jedi');
      const paused = jedi.style.animationPlayState === 'paused';
      jedi.style.animationPlayState = paused ? 'running' : 'paused';
      document.querySelectorAll('.right-arm, .left-arm, .head, .cloak, .blade').forEach(el=>el.style.animationPlayState = paused ? 'running' : 'paused');
    });
  </script>
