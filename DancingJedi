    html,body{height:100%;margin:0;background:#000;}
    .stage{
      height:100%;display:flex;align-items:center;justify-content:center;overflow:hidden;
    }
    /* simple joystick of a stylized "Jedi" figure drawn with SVG — all original shapes */
    svg{width:380px;max-width:80vmin;height:auto;display:block}

    /* dancing animation for the whole body */
    .jedi{
      transform-origin:50% 60%;
      animation: sway 2s ease-in-out infinite;
    }
    @keyframes sway{
      0%{transform: translateY(0) rotate(-2deg) }
      25%{transform: translateY(-6px) rotate(4deg) }
      50%{transform: translateY(0) rotate(-2deg) }
      75%{transform: translateY(6px) rotate(6deg) }
      100%{transform: translateY(0) rotate(-2deg) }
    }

    /* arms swing separate so the lightsaber waves */
    .right-arm{transform-origin:20% 20%;animation: rightSwing 1.1s ease-in-out infinite}
    .left-arm{transform-origin:80% 20%;animation: leftSwing 1.6s ease-in-out infinite}
    @keyframes rightSwing{
      0%{transform: rotate(5deg)}
      50%{transform: rotate(-40deg)}
      100%{transform: rotate(5deg)}
    }
    @keyframes leftSwing{
      0%{transform: rotate(-5deg)}
      50%{transform: rotate(20deg)}
      100%{transform: rotate(-5deg)}
    }

    /* subtle bob for head */
    .head{animation: headBob 2s ease-in-out infinite}
    @keyframes headBob{0%{transform:translateY(0)}50%{transform:translateY(-3px)}100%{transform:translateY(0)}}

    /* cloak flow */
    .cloak{transform-origin:50% 0%;animation: cloakFlow 2.6s ease-in-out infinite}
    @keyframes cloakFlow{0%{transform:skewX(0deg)}50%{transform:skewX(-6deg)}100%{transform:skewX(0deg)}}

    /* lightsaber glow (outer) */
    .glow {
      filter: blur(6px);
      opacity:0.85;
    }

    /* small pulse on the blade */
    .blade{transform-origin:0% 50%;animation: bladePulse 1.6s linear infinite}
    @keyframes bladePulse{0%{opacity:0.95}50%{opacity:1}100%{opacity:0.95}}

    /* footer text */
    .credit{position:fixed;left:12px;bottom:10px;color:#666;font-family:system-ui,Segoe UI,Roboto,Arial,sans-serif;font-size:13px}

    /* make the whole scene interactive pointer cursor */
    .stage:active .jedi{animation-play-state:paused}
  </style>
